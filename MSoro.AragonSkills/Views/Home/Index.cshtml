@model IEnumerable<MSoro_AragonSkills.Models.Peliculas>
@{
    ViewBag.Title = "Home Page";
}
<script type="text/javascript">
    function GoToRoom(id) {
        window.location = "/Home/Ficha?id=" + id;
    }
</script>
<link rel="stylesheet" href="~/Content/bootstrap.min.css">
@using (Html.BeginForm("Index","Home"))
{
    <div class="container">
        <h2>Peliculas Mejor Valoradas</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:50%;">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                @foreach (var item in Model)
                {
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                }
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Resources/introPelis.jpg" style="width:100%;height:100%">
                    <div class="carousel-caption">
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="item" @("onclick=GoToRoom('" + item.idPelicula + "')")>
                        <img src="https://@item.url_foto" alt="@item.nombre" style="width:100%;height:100%">
                        <div class="carousel-caption">

                            <h3>@item.nombre</h3>
                        </div>
                    </div>
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <br />
        <h6>Ordenador por:</h6>
        <div class="container">

            @Html.ActionLink("Titulo", "Index", new { id = 1 }, new { @class = "btn btn-default" })
            @Html.ActionLink("Fecha De Estreno", "Index", new { id = 2}, new { @class = "btn btn-default" })
            @Html.ActionLink("Puntuacion", "Index", new { id = 3 }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="container">
        <br />
        @foreach (var item in Model)
        {
            
                <div style="width:15%;height:250px;  background-image: url(https://@item.url_foto); " class="btn btn-default">@Html.ActionLink("d", "Ficha", new { id = item.idPelicula })</div>
          
        }
    </div>
}
