@model MSoro_AragonSkills.Models.Peliculas
@{
    ViewBag.Title = "Ficha Pelicula";
}
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <div class="container">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idPelicula)
        @Html.HiddenFor(model => model.url_foto)
        @Html.HiddenFor(model => model.url_imbd)
        <img src="@ViewBag.url_imagen" class="img-rounded" alt="Cinque Terre" style="float:left">
        <label style="padding-left:20px" for="comment">Nombre:</label>
        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
        <label style="padding-left:20px" for="comment">Posicion Ranking:</label>
        @Html.EditorFor(model => model.posicion, new { htmlAttributes = new { @class = "form-control" } })
        <label style="padding-left:20px" for="comment">Puntuacion:</label>
        @Html.EditorFor(model => model.rating, new { htmlAttributes = new { @class = "form-control" } })
        <label style="padding-left:20px" for="comment">Año:</label>
        @Html.EditorFor(model => model.año, new { htmlAttributes = new { @class = "form-control" } })
        <label style="padding-left:20px" for="comment">Reparto:</label>
        <br />
        @Html.TextAreaFor(model => model.reparto, new { htmlAttributes = new { @class = "form-control" } })
        <div style="padding-left:20px" class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group mr-2" role="group" aria-label="First group">
                <a href="@ViewBag.url_pelicula"><div class="btn btn-default">Ver ficha en IMDB </div></a>
                <input type="submit" value="Actualizar" class="btn btn-default" name="action:Update" />
                <input type="submit" value="Eliminar" onclick="return confirm('¿Seguro que quiere eliminar esta Pelicula?')" class="btn btn-default" name="action:Delete" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
