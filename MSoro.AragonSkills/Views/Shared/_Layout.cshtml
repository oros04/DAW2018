<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Aragon Skills-Mario Soro Gomez</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Aragon Skills</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="dropdown">
                    <a class="nav-link" style="font-size:12px" data-toggle="dropdown" href="#">
                        Peliculas
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="https://www.imdb.com/movies-in-theaters/?ref_=nv_mv_inth_1">En el Cine</a></li>
                        <li><a href="https://www.imdb.com/movies-coming-soon/?ref_=nv_mv_cs_4">Proximos estrenos</a></li>
                        <li><a href="@Url.Action("Index", "Home")">Peliculas Mejor Valorädas</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="nav-link" style="font-size:12px" data-toggle="dropdown" href="#">
                        Eventos y Noticias
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="https://www.imdb.com/news/movie?ref_=nv_nw_mv_2">Noticias del Cine</a></li>
                        <li><a href="https://www.imdb.com/news/tv?ref_=nv_nw_tv_3">Noticias de Tv</a></li>
                        <li><a href="https://www.imdb.com/news/celebrity?ref_=nv_nw_cel_4">Noticias de Famosos</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Contact", "Home")" style="font-size:12px">Contactar</a>
                </li>
            </ul>
            <div class="col-sm-3 col-md-3 pull-right">
                <form class="navbar-form" role="search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Busqueda" name="srch-term" id="srch-term">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Desarrollado por Mario Soro Gomez-@DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
